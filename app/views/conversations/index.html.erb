<% if user_signed_in? %>

      <div class="row">
        <div class="col-sm-12 text-center" style="background-color:#dcf8c6;">
          <p><%= link_to "Add your Whatsapp conversation", new_conversation_path(current_user) %></p>
        </div>
      </div>  
        
      
      <div class="row">

        <div class="col-sm-12 text-center" style="background-color:#ece5dd;">
            <p>Here are your Conversations! <br><% Conversation.all.where(user_id: current_user.id).each do |c| %>
                <li><%= link_to c.id, conversation_path(c) %></li>
            <% end %></p>
        </div>
      </div>  
<% end %>      